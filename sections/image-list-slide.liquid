{{ 'section-imagelist.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

<div class="dc-imagelist-section wide-container">
    <h2 class="dc-h2">{{section.settings.title}}</h2>
    <h4 class="dc-h4">{{section.settings.subtitle}}</h4>
    <div class="dc-imagelist-container">
       <ul> {%- for block in section.blocks -%}
          <li>
      <img class="dc-slide-wide-image" src="{{ block.settings.image | img_url: image_width }}" alt="{{ block.settings.image.alt }}"/>
          </li> {%- endfor -%}</ul>
    </div>
</div>

{% schema %}
{
    "name": "imagelist",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "imagelist",
        "label": "title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "default": "imagelist",
        "label": "sub title"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "text",
            "id": "title",
            "default": "Column",
            "label": "title"
          },
          {
            "type": "text",
            "id": "alt",
            "default": "alt",
            "label": "alt text"
          },
          {
            "type": "richtext",
            "id": "text",
            "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
            "label": "text"
          },
          {
            "type": "text",
            "id": "link_label",
            "label": "link_label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "link"
          }
        ]
      }
    ],
    "presets": [{
        "name": "image list",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
      }]   
    }
{% endschema %}

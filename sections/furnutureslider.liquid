<div class="homeslider"> 
  <div class="weldone">
  <h2 class="custom-title" style="text-align:{{section.settings.align_text}}">{{section.settings.title}}</h2>
</div>
<div class="slider_contain">
  <div class="slider_flex furnityre">
    {% for block in section.blocks %}
    <div class="postrel">
    <div class="slider_drop">
    {% if block.settings.kome != blank and block.settings.videolink !=blank %}
    <img src="{{block.settings.kome | img_url:'master'}}" class="slidesmg">
    {% elsif block.settings.kome == blank and block.settings.videolink !=blank  %}
    <iframe class="hemfixvideolink" src="{{ block.settings.videolink }}" width="100%" height="577px" controls>
    </iframe>
    {% elsif block.settings.kome != blank and block.settings.videolink ==blank  %}
    <img src="{{block.settings.kome | img_url:'master'}}" class="slidesmg">
    {% endif %}
                    </div>
                    <div class="shopbtn">
                      <p class="shopbtn2"><a href="{{block.settings.shopurl}}"> {{block.settings.shopbtn}}</a></p>
                </div>  
                </div>     
    {% endfor %}
  </div>
</div>
</div>


{% schema %}
  {
  "name": "furnutureslider",
  "settings": [
  {
    "id" : "title",
    "type" : "text",
    "label" : "Heading"
  },
  {
    "type": "select",
    "id": "align_text",
    "label": "Text alignment",
    "default": "left",
    "options": [
    {
    "value": "left",
    "label": "Left"
    },
    {
    "value": "center",
    "label": "Centered"
    },
    {
    "value": "right",
    "label": "Right"
    }
    ]
    }
  ],
  "blocks":[
  {
  "type" : "block",
  "name" : "block",
  "settings" : [
  {
    "type": "url",
    "id": "videolink",
    "label": "Video Link"
 },
 {
  "id": "kome",
  "type": "image_picker",
   "label": "Banner Image"
  },
  {
    "id" : "shopbtn",
    "type" : "text",
    "label" : "shop Button"
  },
  {
    "id" : "shopurl",
    "type" : "url",
    "label" : "Shop Url"
  }
  ]
  }
  ],
  "presets" : [
  {
    "name" : "furnutureslider",
    "category" : "furnutureslider"
    }
  ]
  }
  {% endschema %}

  <script>

$('.furnityre').slick({
  dots: true,
  infinite: true,
  speed: 300,
  arrow:true,
  slidesToShow: 1,
  slidesToScroll: 1,
  prevArrow:"<button type='button' class='komarrow hem1 pull-left'><img src='https://cdn.shopify.com/s/files/1/0611/3184/9891/files/Group_14.png?v=1649144362' /></button>",
            nextArrow:"<button type='button' class='komarrow hem2 pull-right'><img src='https://cdn.shopify.com/s/files/1/0611/3184/9891/files/Group_15.png?v=1649144386' /></button>"
});

  </script>

{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

<div class="dc-multicolumn-section">
    <h2 class="dc-h2">{{section.settings.title}}</h2>
    <h4 class="dc-h4">{{section.settings.subtitle}}</h4>
    <div class="dc-multicolumn-container">
        {%- for block in section.blocks -%}
        <div class="dc-multi-column-item">
            <div>{{block.settings.title}}</div>
            <p>{{block.settings.text}}</p>
        </div>
      {%- endfor -%}
    </div>
</div>

{% schema %}
{
    "name": "multicolumn",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Multicolumn",
        "label": "title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "default": "Multicolumn",
        "label": "sub title"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          },
          {
            "type": "text",
            "id": "title",
            "default": "Column",
            "label": "title"
          },
          {
            "type": "richtext",
            "id": "text",
            "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
            "label": "text"
          },
          {
            "type": "text",
            "id": "link_label",
            "label": "link_label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "link"
          }
        ]
      }
    ],
    "presets": [{
        "name": "multi column",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
      }]   
    }
{% endschema %}

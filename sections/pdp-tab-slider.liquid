<div class="main-section-mb-tab " id="{{section.id}}">

  <div class="all-title-cls">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs nav-justified" role="tablist">

      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"> {{ section.settings.title1 }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"> {{ section.settings.title2 }} </a>
      </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="main-block-tab-slider mindust">
          {% for block in section.blocks %}
          {%- case block.type -%}
          {%- when 'kitchen' -%}
          <div class="first-tab-cls">
          <div class="clsw image-cls-tab">
              <img src="{{ block.settings.image | img_url:'master' }}">             
            </div>
            <div class="text-tab-cls">
              <p> {{ block.settings.text }} </p>
            </div>
          </div>
          {%- endcase -%}
          {% endfor %}
        </div>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="main-block-tab-slider mindust">
          {% for block in section.blocks %}
          {%- case block.type -%}
          {%- when 'wardrobes' -%}
          <div class="first-tab-cls">
            <div class="clsw image-cls-tab">
              <img src="{{ block.settings.image2 | img_url:'master' }}">
            </div>
            <div class="text-tab-cls">
              <p> {{ block.settings.text2 }} </p>
            </div>
          </div>
          {%- endcase -%}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

